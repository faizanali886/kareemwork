<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Configure the web server to serve the correct files -->
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- Ensure requests are routed through Next.js -->
    <rewrite>
      <rules>
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^server.js\/debug[\/]?" />
        </rule>

        <!-- Handle Next.js page and API routes -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True" />
          </conditions>
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Logging options, can be removed in production -->
    <iisnode loggingEnabled="true" />

    <!-- Set the node process to use the correct version of Node.js -->
    <security>
      <requestFiltering>
        <hiddenSegments>
          <remove segment="node_modules" />
        </hiddenSegments>
      </requestFiltering>
    </security>

    <!-- If running in Azure, set the environment variable for production -->
    <environmentVariables>
      <environmentVariable name="NODE_ENV" value="production" />
    </environmentVariables>
  </system.webServer>
</configuration>
